<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Alarm.AlarmNotification">

    <ImageView
        android:id="@+id/alarm_notification_bg"
        android:layout_width="match_parent"
        android:layout_height="519dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/alarm_background_test" />

    <TextView
        android:id="@+id/alarm_notification_alarm"
        android:layout_width="161dp"
        android:layout_height="103dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="Alarm"
        android:textSize="60sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/alarm_notification_time"
        android:layout_width="216dp"
        android:layout_height="63dp"
        android:layout_marginTop="440dp"
        android:text="12:20"
        android:textAlignment="center"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/alarm_notification_bg"
        app:layout_constraintTop_toTopOf="@+id/alarm_notification_bg" />

    <Button
        android:id="@+id/alarm_notification_wakeup_btn"
        android:layout_width="155dp"
        android:layout_height="85dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#7AB4C2"
        android:text="Done"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/alarm_notification_bg"
        app:layout_constraintHorizontal_bias="0.16"
        app:layout_constraintStart_toStartOf="@+id/alarm_notification_bg"
        app:layout_constraintTop_toBottomOf="@+id/alarm_notification_bg" />

    <Button
        android:id="@+id/alarm_notification_snooze_btn"
        android:layout_width="155dp"
        android:layout_height="85dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#7AB4C2"
        android:text="Snooze"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/alarm_notification_bg"
        app:layout_constraintHorizontal_bias="0.878"
        app:layout_constraintStart_toStartOf="@+id/alarm_notification_bg"
        app:layout_constraintTop_toBottomOf="@+id/alarm_notification_bg" />

</androidx.constraintlayout.widget.ConstraintLayout>